{
  "$schema": "http://json-schema.org/schema#",
  "title": "Aristotle Validation Setup",
  "description": "Setup defining rules used to validate metadata",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "status": {
        "type": "string"
      },
      "object": {
        "type": "string"
      },
      "checks": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "field": {
              "type": "string"
            },
            "output": {
              "type": "string",
              "enum": ["warning", "error"]
            },
            "rule": {
              "type": "string"
            }
          },
          "required": ["type", "field", "rule"],
          "additionalProperties": false
        }
      }
    },
    "required": ["status", "object", "checks"],
    "additionalProperties": false
  }
}
